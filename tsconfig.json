{
  "include": [
    "lib/**/*.ts",
    "lib/**/*.tsx",
    "./modules.d.ts"
  ],
  "compilerOptions": {
    "target": "es6",
    "skipLibCheck": true, // Skips type checking of declaration files
    "lib": ["es2017", "es7", "es6", "dom"],
    "module": "es6",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "types": ["node", "react"]
  },
  "exclude": [
    "node_modules",
    "dist",
    "__tests__",
    "testing-utils",
    "**/*.spec.js",
    "**/*.test.js",
    "**/*.log"
  ]
}
